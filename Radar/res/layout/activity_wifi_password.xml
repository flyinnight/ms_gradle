<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/bg_testskin"
              android:orientation="vertical">

    <include layout="@layout/layout_title"/>
    <!--  include layout="@layout/decive_connect_head_layout" />-->

    <TextView
        android:id="@+id/infotitle"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="12dp"
        android:gravity="center_vertical"
        android:text="@string/activity_wifipassword_title"
        android:textColor="@color/default_light_text_color"
        android:textSize="@dimen/default_text_size_small"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/default_line_size"
        android:background="@color/default_line_color"
        android:visibility="gone"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_white_transparent"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/activity_wifipassword_wifi"
            android:textColor="@color/default_light_text_color"
            android:textSize="@dimen/default_text_size"/>

        <TextView
            android:id="@+id/ssid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/default_light_text_color"
            android:textSize="@dimen/default_text_size"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/default_line_size_big"
        android:background="@drawable/divider_transparent"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_white_transparent"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center_vertical"
            android:text="@string/activity_activity_wifi_password"
            android:textColor="@color/default_light_text_color"
            android:textSize="@dimen/default_text_size"/>

        <EditText
            android:id="@+id/password"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_weight="6"
            android:background="@null"
            android:inputType="textPassword"
            android:textColor="@color/default_light_text_color"
            android:textCursorDrawable="@drawable/cursor"
            android:textSize="@dimen/default_text_size"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/default_line_size"
        android:background="@color/default_line_color"
        android:visibility="gone"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/confim"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:background="@drawable/btn_test_global"
            android:gravity="center"
            android:text="@string/activity_wifipassword_confirm"
            android:textColor="@color/default_light_text_color"
            android:textSize="@dimen/default_text_size"/>

        <Button
            android:id="@+id/input_next"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:background="@drawable/btn_white"
            android:gravity="center"
            android:text="@string/input_next_time"
            android:textColor="@color/color_test_text"
            android:textSize="@dimen/default_text_size"
            android:visibility="visible"/>
    </LinearLayout>

</LinearLayout>