<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:orientation="vertical">
    <!--android:clickable="true"-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/topic_item_margin_l_r"
        android:layout_marginRight="@dimen/topic_item_margin_l_r"
        android:background="@drawable/bg_post_item"
        android:duplicateParentState="true"
        android:foreground="@drawable/bg_highlights_item"
        android:paddingBottom="12dp"
        android:paddingLeft="6.3dp"
        android:paddingRight="6.3dp"
        android:paddingTop="6.6dp">

        <ImageView
            android:id="@+id/iv_image"
            android:layout_width="match_parent"
            android:layout_height="126.6dp"
            android:layout_marginBottom="12dp"
            android:scaleType="fitXY"/>

        <TextView
            android:id="@+id/tv_text"
            android:layout_below="@id/iv_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="7.6dp"
            android:paddingRight="7.6dp"
            android:maxLines="2"
            android:lineSpacingExtra="1dp"
            android:lineSpacingMultiplier="1.2"
            android:textColor="@color/default_edit_text_color"
            android:textSize="@dimen/topic_item_title_text"/>
    </RelativeLayout>
</LinearLayout>