<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" >

    <LinearLayout
        android:gravity="center"
        android:layout_width="83dp"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/default_distance_middle"
        android:paddingBottom="@dimen/default_distance_middle"
        android:background="@drawable/bg_waiting"
        android:orientation="vertical" >

        <ImageView
            android:id="@android:id/icon1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@anim/img_waiting" />
        
        <TextView
            android:gravity="center"
            android:id="@android:id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/default_distance_small"
            android:textColor="@color/dialog_wait_text_color"
            android:textSize="@dimen/dialog_wait_text_size"
            android:text="@string/dialog_wait" />
    </LinearLayout>

</merge>