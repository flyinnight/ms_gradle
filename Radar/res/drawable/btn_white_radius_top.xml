<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape >
            <solid android:color="@color/white_button_pressed" />
            <corners android:topLeftRadius="@dimen/default_radius"
                android:topRightRadius="@dimen/default_radius" />
        </shape>
    </item>
    <item >        
        <shape >
            <solid android:color="@color/white_button_normal"/>
            <corners android:topLeftRadius="@dimen/default_radius"
                android:topRightRadius="@dimen/default_radius" />
        </shape>
     </item>

</selector>