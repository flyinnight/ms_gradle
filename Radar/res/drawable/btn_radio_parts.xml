<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" android:enterFadeDuration="200" android:exitFadeDuration="200">

    <item android:state_enabled="false">
        <shape android:shape="oval">
            <gradient android:angle="270" android:endColor="@color/test_button_light_end" android:startColor="@color/test_button_light_start" />
        </shape>
    </item>
    <item android:state_checked="true">
        <shape android:shape="oval">
            <gradient android:angle="270" android:endColor="@color/test_button_light_end" android:startColor="@color/test_button_light_start" />
        </shape>
    </item>
    <item>
        <shape android:shape="oval">
            <gradient android:angle="270" android:endColor="@color/test_button_dark_end" android:startColor="@color/test_button_dark_start" />
        </shape>
    </item>

</selector>