<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" android:enterFadeDuration="200" android:exitFadeDuration="200">

    <item android:state_checked="true">
        <shape>
            <corners android:radius="@dimen/default_radius_small" />
            <solid android:color="@color/plan_primary" />
        </shape>
    </item>
    <item>
        <shape>
            <corners android:radius="@dimen/default_radius_small" />
            <stroke android:color="@color/plan_primary" android:width="1dp" />
        </shape>
    </item>
</selector>