    <style name="BaseDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:backgroundDimAmount">0.0</item>
        <!--
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@color/dialog_background_color</item>
        -->
        <!-- <item name="android:windowAnimationStyle">@style/RadarAnimation</item> -->
        <!-- <item name="android:windowContentOverlay">@color/dialog_background_color</item> -->
    </style>

    <style name="ShadowDialog" parent="BaseDialog">
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.3</item>
    </style>

    <style name="BottomDialog" parent="ShadowDialog">
        <item name="android:windowAnimationStyle">@style/BottomDialogAnim</item>
    </style>

    <style name="BottomDialog.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/btn_white_radius_none</item>
        <item name="android:minHeight">@dimen/default_button_height</item>
        <item name="android:paddingBottom">@dimen/default_button_padding_t_b</item>
        <item name="android:paddingTop">@dimen/default_button_padding_t_b</item>
        <item name="android:textColor">@color/default_text_color</item>
        <item name="android:textSize">@dimen/default_text_size_big</item>
    </style>

    <style name="FadeDialog" parent="ShadowDialog">
        <item name="android:windowAnimationStyle">@style/FadeAnimation</item>
    </style>

    <style name="RadarAnimationInLeftOutDownDialog" parent="ShadowDialog">
        <item name="android:windowAnimationStyle">@style/BottomDialogAnim</item>
    </style>

    <style name="RadarAnimation" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/test_cartoon_show</item>
        <item name="android:windowExitAnimation">@anim/test_cartoon_hide</item>
    </style>

    <style name="BottomDialogAnim" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/info_head_change_dialog_in</item>
        <item name="android:windowExitAnimation">@anim/info_head_change_dialog_out</item>
    </style>

    <style name="FadeAnimation" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <style name="RadarText">
        <item name="android:textSize">@dimen/default_text_size</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="RadarText.Default" parent="RadarText">
        <item name="android:textColor">@color/default_text_color</item>
    </style>

    <style name="RadarText.PersonalInfo" parent="RadarText">
        <item name="android:textSize">@dimen/mine_mine_item_text_size</item>
        <item name="android:textColor">@color/mine_personal_info_text_color</item>
    </style>

    <style name="RadarText.TasteCheckBox" parent="RadarText">
        <item name="android:textSize">@dimen/test_taste_category_text_size</item>
    </style>

    <style name="RadarText.Tips" parent="RadarText">
        <item name="android:textSize">@dimen/test_normal_real_time_text_size</item>
        <item name="android:textColor">@color/test_normal_real_time_color</item>
    </style>

    <style name="RadarText.Tips.Big" parent="RadarText.Tips">
        <item name="android:textSize">@dimen/default_text_size</item>
    </style>

    <style name="RadarText.Tips.Taste" parent="RadarText.Tips">
        <item name="android:textSize">@dimen/test_taste_input_tip_text_size</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="RadarText.Gray" parent="RadarText">
        <item name="android:textColor">@color/test_normal_result_text_color</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="RadarText.Water" parent="RadarText.Gray">
        <item name="android:textColor">@color/test_normal_result_water_text_color</item>
    </style>

    <style name="RadarText.Oil" parent="RadarText.Gray">
        <item name="android:textColor">@color/test_normal_result_oil_text_color</item>
    </style>

    <style name="RadarText.Black" parent="RadarText">
        <item name="android:textColor">@color/default_edit_text_color</item>
    </style>

    <style name="RadarText.Indicator" parent="RadarText">
        <item name="android:textSize">@dimen/tabs_indicator_text_size</item>
    </style>

    <style name="RadarText.Title" parent="RadarText.Black">
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:textColor">@color/color_title_text</item>
    </style>

    <style name="RadarText.Title.Center" parent="RadarText.Title">
        <item name="android:textSize">@dimen/title_center_text_size</item>
        <item name="android:textColor">@color/title_text_normal</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="RadarText.Button" parent="RadarText">
        <item name="android:textSize">@dimen/test_skin_fun_button_text_size</item>
    </style>

    <style name="RadarText.Button.Long" parent="RadarText">
        <item name="android:background">@drawable/btn_face_test</item>
    </style>

    <style name="RadarText.Button.Big" parent="RadarText.Button">
        <item name="android:textSize">@dimen/default_text_size_big</item>
    </style>

    <style name="RadarText.Button.SpecialTest" parent="RadarText.Button">
        <item name="android:textSize">@dimen/skin_special_label_text_size</item>
    </style>

    <style name="RadarText.Button.Radio" parent="RadarText.Button">
        <item name="android:gravity">center</item>
        <item name="android:button">@null</item>
        <item name="android:background">@drawable/btn_radio_line_center</item>
    </style>

    <style name="RadarText.Button.Radio.Parts" parent="RadarText.Button.Radio">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/test_normal_radio_text_size</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">middle</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/btn_radio_parts</item>
    </style>

    <style name="RadarText.Button.Radio.Left" parent="RadarText.Button.Radio">
        <item name="android:background">@drawable/btn_radio_line_left</item>
    </style>

    <style name="RadarText.Button.Radio.Right" parent="RadarText.Button.Radio">
        <item name="android:background">@drawable/btn_radio_line_right</item>
    </style>

    <style name="RadarText.Button.Radio.Choice" parent="RadarText.Button.Radio">
        <item name="android:background">@drawable/btn_radio_primary</item>
        <item name="android:textColor">@color/color_radio_choice_text</item>
        <item name="android:button">@null</item>
        <item name="android:textSize">12sp</item>
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:padding">@dimen/default_distance_middle</item>
    </style>

    <style name="RadarText.Button.Radio.Choice.Plan" parent="RadarText.Button.Radio.Choice">
        <item name="android:background">@drawable/btn_radio_plan_primary</item>
        <item name="android:textColor">@color/color_radio_choice_text_plan</item>
    </style>

    <style name="Radar.NumberPicker" parent="NPWidget.NumberPicker">
        <item name="solidColor">@android:color/transparent</item>
        <item name="selectionDivider">@drawable/np_numberpicker_selection_divider</item>
        <item name="selectionDividerHeight">0dip</item>
        <item name="internalLayout">@layout/layout_number_picker_with_selector_wheel</item>
        <item name="internalMinWidth">64dip</item>
        <item name="internalMaxHeight">150dip</item>
        <item name="virtualButtonPressedDrawable">@null</item>
    </style>

    <style name="SkinCarePlanPopupWindowAnim">
        <item name="android:windowEnterAnimation">@anim/in_skin_care_plan</item>
        <item name="android:windowExitAnimation">@anim/out_skin_care_plan</item>
    </style>
