<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:state_pressed="true">
        <shape>
            <padding 
                android:top="@dimen/mine_focus_item_button_padding_t_b"
                android:bottom="@dimen/mine_focus_item_button_padding_t_b"
                android:left="@dimen/mine_focus_item_button_padding_l_r"
                android:right="@dimen/mine_focus_item_button_padding_l_r" />
            <corners android:radius="@dimen/test_taste_input_radius" />
            <gradient android:angle="270" android:endColor="@color/test_button_bright_end" android:startColor="@color/test_button_bright_start" />
        </shape>
    </item>
    <item>
        <shape>
            <padding 
                android:top="@dimen/mine_focus_item_button_padding_t_b"
                android:bottom="@dimen/mine_focus_item_button_padding_t_b"
                android:left="@dimen/mine_focus_item_button_padding_l_r"
                android:right="@dimen/mine_focus_item_button_padding_l_r" />
            <corners android:radius="@dimen/test_taste_input_radius" />
            <gradient android:angle="270" android:endColor="@color/test_button_check_light_end" android:startColor="@color/test_button_check_light_start" />
        </shape>
    </item>


</selector>