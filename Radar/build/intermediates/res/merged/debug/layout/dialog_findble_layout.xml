<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:id="@+id/main_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_bg"
        android:gravity="center"
        android:layout_margin="@dimen/dialog_main_layout_margin"
        android:orientation="vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dialog_item_margin_top"
            android:text="@string/dialog_nodevice"
            android:textColor="#464646"
            android:textSize="21sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dialog_item_margin_top"
            android:background="@drawable/blutooth" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dialog_bottom_btn_height"
            android:layout_marginBottom="@dimen/dialog_item_margin_top"
            android:layout_marginTop="@dimen/dialog_item_margin_top"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="1" >

            <Button
                android:id="@+id/setble"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:background="@drawable/dialog_setble_btn_bg"
                android:text="@string/dialog_setble"
                android:textColor="#ffffff" />
        </LinearLayout>
    </LinearLayout>

    <ImageButton
        android:id="@+id/dialog_close"
        android:layout_width="@dimen/dialog_clos_btn_height"
        android:layout_height="@dimen/dialog_clos_btn_height"
        android:layout_alignParentRight="true"
        android:background="@drawable/dialog_close_btn_bg" />

</RelativeLayout>