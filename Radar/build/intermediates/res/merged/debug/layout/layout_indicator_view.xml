<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingTop="@dimen/test_history_indicator_margin_t_b"
    android:paddingBottom="@dimen/test_history_indicator_margin_t_b"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">
    <!--com.dilapp.radar.view.Checkable-->
    <ImageView 
        android:visibility="gone"
        android:id="@android:id/icon1"
        android:duplicateParentState="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/default_distance_middle" />
    
    <TextView
        android:id="@android:id/text1"
        android:layout_gravity="center"
        android:duplicateParentState="true"
        android:layout_toRightOf="@android:id/icon1"
        android:textColor="@color/color_history_indicator_text"
        android:textSize="14sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>