<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_mine_item"
    android:minHeight="@dimen/mine_mine_item_min_height"
    android:paddingBottom="@dimen/test_taste_result_row_distance"
    android:paddingLeft="@dimen/test_taste_category_col_distance"
    android:paddingRight="@dimen/test_taste_result_row_distance"
    android:paddingTop="@dimen/test_taste_result_row_distance" >

    <ImageView
        android:id="@android:id/icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/mine_mine_item_padding_l_r"
        android:visibility="gone" />

    <TextView
        android:id="@android:id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/default_distance_small"
        android:layout_toRightOf="@android:id/icon"
        android:textColor="@color/mine_mine_item_text_color"
        android:textSize="@dimen/mine_mine_head_info_text_size"
        android:visibility="gone" />

    <View
        android:id="@android:id/toggle"
        android:layout_width="@dimen/default_dot_size"
        android:layout_height="@dimen/default_dot_size"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@android:id/text1"
        android:background="@drawable/oval_primary_sk_sl"
        android:visibility="gone" />

    <LinearLayout
        android:id="@android:id/custom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/default_distance_middle"
        android:layout_marginRight="@dimen/mine_mine_item_padding_l_r"
        android:layout_toLeftOf="@android:id/icon1"
        android:layout_toRightOf="@android:id/text1"
        android:gravity="right"
        android:orientation="vertical"
        android:visibility="gone" />

    <ImageView
        android:id="@android:id/icon1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/img_next"
        android:visibility="gone" />

</RelativeLayout>