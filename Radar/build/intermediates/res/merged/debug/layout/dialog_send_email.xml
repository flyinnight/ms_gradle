<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="25dp"
    android:layout_marginRight="25dp"
    android:background="@drawable/bg_item_content"
    android:orientation="vertical"
    android:paddingBottom="1px"
    android:paddingLeft="1px"
    android:paddingRight="1px" >

    <TextView
        android:id="@+id/dialog_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/tch_head"
        android:gravity="center"
        android:lineSpacingExtra="2dp"
        android:lineSpacingMultiplier="1.2"
        android:padding="16dp"
        android:textColor="@color/black"
        android:textSize="14sp" />

    <View
        android:id="@+id/divider_h"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/divider_h" >
    </View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/dialog_btn_ok"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/button_white_click"
            android:gravity="center"
            android:padding="14dp"
            android:textColor="@color/dialog_text"
            android:textSize="16sp" />
    </LinearLayout>

</LinearLayout>