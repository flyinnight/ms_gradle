<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#00ffffff"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/edit_item_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/mine_edit_item_h"
        android:background="#ffffff" >

        <TextView
            android:id="@+id/edit_item_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:gravity="center_vertical"
            android:text="@string/unknown"
            android:textSize="@dimen/login_warning_text_size" />

        <RadioButton
            android:id="@+id/check_node"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:background="@drawable/mine_edit_node_check"
            android:button="@null"
            android:checked="false"
            android:gravity="center" />
    </LinearLayout>

</LinearLayout>